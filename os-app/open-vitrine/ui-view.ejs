<%
locals.OLSKPageTitle = OLSKLocalized('MSWVitrineTitle');
locals.OLSKPageDescription = OLSKLocalized('MSWVitrineDescription');
locals.OLSKPageAssets = [
	'/_shared/__external/normalize.css/normalize.css',
	'/_shared/__external/OLSKDecor/ui-style.css',
	'/_shared/common/ui-style.css',
	'ui-style.css',
];
locals.OLSKPagePublicConstants = {
	OLSKSharedPageCurrentLanguage: OLSKSharedPageCurrentLanguage,
};
%>

<div class="MSWVitrine OLSKDecor OLSKDecorCapped OLSKDecorNoTopPad">

<%- include('../_shared/__external/OLSKLanguageSwitcher/main.ejs') %>

<hr role="presentation" />

<div class="MSWVitrineCrown OLSKCommonCard OLSKCommonCrownCard">
	<img class="MSWVitrineCrownIcon" src="<%= process.env.MSW_VITRINE_IDENTITY_URL %>" role="presentation" />
	<section>
		<span class="MSWVitrineCrownName"><%= OLSKLocalized('MSWVitrineTitle') %></span>
		<span class="MSWVitrineCrownBlurb"><%= OLSKLocalized('MSWVitrineDescription') %></span>
	</section>
</div>

<p class="OLSKCommonWhatIsIt"><%= OLSKLocalized('OLSKCommonWhatIsItText') %></p>

<article class="MSWVitrineContent">

<%- OLSKStringReplaceTokens(MSWVitrineContent, {}) %>

</article>

<%- include('../../node_modules/ROCOGazette/main.ejs', {
	_OLSKModulesDirPrefix: '../.',
	ROCOBulletinProject: process.env.ROCO_SHARED_PROJECT_ID,
}) %>

<%- include('../../node_modules/OLSKJar/main.ejs') %>

<%- include('../../node_modules/OLSKEdit/main.ejs', {
	OLSKEditURL: process.env.OLSK_REPO_URL,
}) %>

<hr role="presentation" />

<%- include('../../node_modules/SWARLink/main.ejs') %>

<hr role="presentation" />

<%- include('../_shared/__external/ROCORootLink/main.ejs') %>

